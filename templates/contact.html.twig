{# Entête de la page / Inclusion #}
{% include 'header.html.twig' %}
<body class="bg-light">

    {# Barre de Navigation #}
    {% include 'navigation.html.twig' %}

    {# Contenu de la page #}
   <div id="content" class="container mt-4">
        <div>
            <h1 class="h1 text-danger">Nous Contacter</h1>
        </div>
        <hr>
        {% block contact %}
        <div>
            <form action="/accueil" method="POST">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary mb-2">Envoyer la demande</button>
                {{ form_end(form) }}
            </form>
            <div>
                {% if success is defined %}
                <p>{{ success }}</p>
                {% endif %}
                
                {% if error is defined %}
                <p>{{ error }}</p>
                {% endif %}
            </div>

            <div class="w-100">
                <hr>
                <h4 class="ml-3">Où nous trouver ?</h4>
                <iframe class="w-100" height="450" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10122.156139258252!2d3.0567899207976845!3d50.63567954604717!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c2d58ac6848f7f%3A0xbcd72346ac4a66ba!2sWestfield%20Euralille!5e0!3m2!1sfr!2sfr!4v1706017945730!5m2!1sfr!2sfr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        {% endblock %}
    </div>

    {# Pied de page #}
    {% include 'footer.html.twig' %}
</body>
</html>